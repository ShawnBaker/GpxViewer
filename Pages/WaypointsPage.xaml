<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpxViewer.WaypointsPage"
             Title="Waypoints">

	<ScrollView HorizontalOptions="Center" Orientation="Both" Margin="10">
		<VerticalStackLayout Spacing="5">
			<Border Padding="5">
				<ListView x:Name="WaypointsListView" WidthRequest="200" HeightRequest="400"/>
			</Border>
			<Button Text="Map" Clicked="MapButton_Clicked"/>
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>