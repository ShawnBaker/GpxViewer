<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpxViewer.RoutesPage"
             Title="Routes">

	<ScrollView HorizontalOptions="Center" Orientation="Both" Margin="10">
		<VerticalStackLayout Spacing="5">
			<Label Text="Routes:" HorizontalOptions="Start"/>
			<Border Padding="5">
				<ListView x:Name="RoutesListView" WidthRequest="300" HeightRequest="100"/>
			</Border>
			<Label Text="Points:" HorizontalOptions="Start"/>
			<Border Padding="5">
				<ListView x:Name="PointsListView" WidthRequest="300" HeightRequest="300"/>
			</Border>
			<Button Text="Map" Clicked="MapButton_Clicked"/>
			<Button Text="Graph" Clicked="GraphButton_Clicked"/>
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>