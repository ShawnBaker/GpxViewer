<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GpxViewer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GpxViewer"
    Shell.FlyoutBehavior="Disabled">

	<TabBar>
		<Tab Title="Home">
			<ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
		</Tab>
		<Tab Title="Routes">
			<ShellContent ContentTemplate="{DataTemplate local:RoutesPage}" Route="RoutesPage" />
		</Tab>
		<Tab Title="Waypoints">
			<ShellContent ContentTemplate="{DataTemplate local:WaypointsPage}" Route="WaypointsPage" />
		</Tab>
		<Tab Title="Tracks">
			<ShellContent ContentTemplate="{DataTemplate local:TracksPage}" Route="TracksPage" />
		</Tab>
	</TabBar>

</Shell>
